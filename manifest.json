{
  "manifest_version": 2,

  "name": "Bookmark Tree",
  "description": "Bookmark Tree is a bookmark manager. All bookmarks are stored in cloud, so you can access them from anybrowser. Also oyou can write comments and links to another bookmarks. You also can share them with you friends",
  "version": "1.0",

  "browser_action": {
    "default_icon":  {
      "19": "images/icon19.png", 
      "38": "images/icon38.png"
    },
    "default_popup": "html/index.html",
    "default_title": "Bookmark tree"
  },

  "background": {
    "scripts": [
                "/js/vendor/bluebird/js/browser/bluebird.js",
                "/js/vendor/jquery/dist/jquery.min.js",
                "/js/vendor/underscore/underscore.js",
                "/js/shared/Utils.js",
                "/js/background/preferencesService.js",
                "/js/background/storageService.js",
                "/js/shared/messageTypes.js",
                "/js/background/background.js"
                ]
  },

  "content_scripts"  : [{
    "matches": ["http://*/*", "https://*/*"],
    "js" : [
      "/js/vendor/jquery/dist/jquery.min.js",
      "/js/vendor/node-uuid/uuid.js",
      "/js/vendor/css-selector-generator/build/css-selector-generator.min.js",

      "/js/shared/Utils.js",
      "/js/content/bookmarkStore.js",
      "/js/shared/messageTypes.js",
      "/js/shared/DOMUtils.js",
      "/js/content/removeController.js",
      "/js/content/commentControllerBase.js",
      "/js/content/commentController.js",
      "/js/content/linkController.js",
      "/js/content/markController.js",
      "/js/content/content.js"],
    "css" : ["/css/content.css"]
  }],

  "permissions": [
    "storage",
    "unlimitedStorage",
    "activeTab",
    "bookmarks",
    "contextMenus",
    "http://localhost:3000"
  ],

  "web_accessible_resources": [
    "images/*"
  ],

  "endpointUrl": "http://localhost:3000"
}